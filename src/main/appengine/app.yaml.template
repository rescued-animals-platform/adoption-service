runtime: java
env: flex

runtime_config:
  jdk: openjdk8

resources:
  cpu: 1
  memory_gb: 3.75
  disk_size_gb: 10

automatic_scaling:
  min_num_instances: 1
  max_num_instances: 2
  cool_down_period_sec: 180
  cpu_utilization:
    target_utilization: 0.6

env_variables:
  DB_CONNECTION_NAME: DB_CONNECTION_STRING
  JAVA_OPTS: -Dspring.profiles.active=SPRING_PROFILE


